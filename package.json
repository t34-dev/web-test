{
  "name": "turbo-starter",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build --filter=./apps/*",
    "clean": "turbo run clean --filter=./apps/*",
    "lint": "turbo run lint",
    "dev": "turbo run dev --filter=./apps/*",
    "dev:debug": "turbo run dev:debug --filter=backend",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "start": "turbo run start --filter=./apps/*",
    "generate": "turbo run generate --filter=backend",
    "prisma:migrate:deploy": "turbo run prisma:migrate:deploy --filter=backend",
    "prisma:migrate": "turbo run prisma:migrate --filter=backend",
    "prisma:push": "turbo run prisma:push --filter=backend",
    "env:up": "turbo run env:up --filter=backend"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "turbo": "^2.2.1"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.14.3"
}
