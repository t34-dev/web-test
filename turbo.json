{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT", ".env*"],
      "outputs": ["dist/**"],
      "env": ["PORT"]
    },
    "clean": {
      "cache": false
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "prisma:migrate:deploy": {},
    "prisma:migrate": {},
    "prisma:push": {},
    "generate": {
      "dependsOn": ["^generate"]
    }
  }
}
